{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Hotel Occupany vs Tourists Arrival by Month",
  "width": 500,
  "height": 300,
  "data": {"url": "../data/hotel_occupancy_data.csv"},
  "mark": "point",
  "encoding": {
    "x": {
      "field": "TotalVisitors",
      "type": "quantitative",
      "title": "Number of Tourist Arrivals"
    },
    "y": {
      "field": "HotelOccupancyRate",
      "type": "quantitative",
      "title": "Hotel Occupancy Percentage"
    },
    "tooltip": [
      {"field": "Month", "type": "nominal", "title": "Month"},
      {"field": "Year", "type": "nominal", "title": "Year"},
      {"field": "TotalVisitors", "type": "quantitative", "title": "Tourist Arrivals"},
      {"field": "HotelOccupancyRate", "type": "quantitative", "title": "Hotel Occupancy %"}
    ]
  },
  "transform": [
    {
      "filter": {
        "selection": "yearSelector"
      }
    }
  ],
  "selection": {
    "yearSelector": {
      "type": "single",
      "fields": ["Year"],
      "bind": {
        "input": "select",
        "options": ["All", "2023", "2022", "2021", "2020", "2019", "2018"],
        "name": "Select Year", 
        "init": "All"
      }
    }
  }
}