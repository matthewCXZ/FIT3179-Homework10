{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height":450,
  "title": " International Visitor Arrivals at Singapore over past one year",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/matthewCXZ/FIT3179-Homework10/main/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightseagreen", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/matthewCXZ/FIT3179-Homework10/main/Tourists.csv"
      },
      "mark": {"type": "circle", "opacity": 0.7, "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "tourists",
          "type": "quantitative",
          "title": "Number of Tourists (Size)",
          "scale": {"domain": [1000, 2100000],"range":[50,500]}
        },
        "color": {
          "field": "tourists",
          "type": "quantitative",
          "title": "Number of Tourists (color)",
          "scale": {"scheme": "reds"}
        }
      }
    }
    
  ]
}
